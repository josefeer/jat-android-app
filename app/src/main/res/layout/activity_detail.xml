<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >

        <TextView
            android:id="@+id/toolbar_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/toolbar_detail_title"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/detail_txt_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/NA"
        app:layout_constraintTop_toBottomOf="@id/toolbar_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/detail_lbl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/lbl_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_txt_type"
        app:layout_constraintRight_toLeftOf="@id/detail_txt_id"
        />

    <TextView
        android:id="@+id/detail_txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/NA"
        app:layout_constraintTop_toBottomOf="@id/detail_txt_type"
        app:layout_constraintLeft_toRightOf="@id/detail_lbl_id"
        />

    <TextView
        android:id="@+id/detail_lbl_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/lbl_starttime"
        app:layout_constraintTop_toBottomOf="@id/detail_txt_type"
        app:layout_constraintRight_toLeftOf="@id/detail_txt_starttime"
        />

    <TextView
        android:id="@+id/detail_txt_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/NA"
        app:layout_constraintTop_toBottomOf="@id/detail_txt_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        />

    <TextView
        android:id="@+id/detail_lbl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/lbl_date"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintRight_toLeftOf="@id/detail_txt_date"
        />

    <TextView
        android:id="@+id/detail_txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/NA"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_id"
        app:layout_constraintLeft_toRightOf="@id/detail_lbl_date"
        />

    <TextView
        android:id="@+id/detail_lbl_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/lbl_endtime"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_starttime"
        app:layout_constraintRight_toLeftOf="@id/detail_txt_endtime"
        />

    <TextView
        android:id="@+id/detail_txt_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/NA"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_starttime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintLeft_toRightOf="@id/detail_lbl_endtime"
        />

    <TextView
        android:id="@+id/detail_lbl_equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/lbl_equipment"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintRight_toLeftOf="@id/detail_txt_equipment"
        />

    <TextView
        android:id="@+id/detail_txt_equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/NA"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_date"
        app:layout_constraintLeft_toRightOf="@id/detail_lbl_equipment"
        />

    <TextView
        android:id="@+id/detail_txt_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/NA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_endtime"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintLeft_toRightOf="@id/detail_lbl_client"
        />

    <TextView
        android:id="@+id/detail_lbl_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/lbl_client"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_endtime"
        app:layout_constraintRight_toLeftOf="@id/detail_txt_client"
        />

    <TextView
        android:id="@+id/detail_lbl_serial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/lbl_serial"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_equipment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <TextView
        android:id="@+id/detail_txt_serial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/NA"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_equipment"
        app:layout_constraintLeft_toRightOf="@id/detail_lbl_serial"
        />

    <TextView
        android:id="@+id/detail_lbl_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/lbl_range"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_serial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintRight_toLeftOf="@id/detail_txt_range"
        />

    <TextView
        android:id="@+id/detail_txt_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/NA"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_serial"
        app:layout_constraintLeft_toRightOf="@id/detail_lbl_range"
        />

    <TextView
        android:id="@+id/detail_lbl_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/lbl_period"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_range"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintRight_toLeftOf="@id/detail_txt_period"

        />

    <TextView
        android:id="@+id/detail_txt_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/NA"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_range"
        app:layout_constraintLeft_toRightOf="@id/detail_lbl_period"
        />

    <LinearLayout
        android:id="@+id/details_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/detail_lbl_period"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/detail_lbl_timestamp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/lbl_timestamp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />

        <TextView
            android:id="@+id/detail_lbl_s1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/lbl_s1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/detail_lbl_s2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/lbl_s2"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/detail_lbl_s3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/lbl_s3"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/detail_lbl_s4"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/lbl_s4"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/detail_lbl_s5"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/lbl_s5"
            android:gravity="center"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/data_list1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_tags"
        />

</android.support.constraint.ConstraintLayout>
