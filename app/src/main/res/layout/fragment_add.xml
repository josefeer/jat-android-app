            <TextView
                android:id="@+id/addfragment_lbl_s6_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/NA"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/addfragment_lbl_s6"
                app:layout_constraintBottom_toBottomOf="@id/addfragment_lbl_s6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/addfragment_lbl_s3"/>

            <TextView
                android:id="@+id/addfragment_lbl_s7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/addfragment_lbl_s7"
