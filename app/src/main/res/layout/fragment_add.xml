                android:id="@+id/lbl_addfragment8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="@string/lbl_addfragment_minutos"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/lbl_addfragment6"
                app:layout_constraintBottom_toBottomOf="@id/lbl_addfragment7"
                app:layout_constraintTop_toTopOf="@id/lbl_addfragment7" />

            <TextView
                android:id="@+id/lbl_addfragment9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/lbl_addfragment9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_addfragment8" />

            <Spinner
                android:id="@+id/addfragment_sp4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                app:layout_constraintTop_toTopOf="@id/lbl_addfragment9"
                app:layout_constraintBottom_toBottomOf="@id/lbl_addfragment9"
                app:layout_constraintLeft_toRightOf="@id/lbl_addfragment9"
                app:layout_constraintRight_toLeftOf="@id/lbl_addfragment10"/>

