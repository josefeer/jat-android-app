            <TextView
                android:id="@+id/addfragment_lbl_s5_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/NA"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/addfragment_lbl_s5"
                app:layout_constraintBottom_toBottomOf="@id/addfragment_lbl_s5"
