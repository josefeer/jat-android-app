                android:id="@+id/addfragment_sp3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                app:layout_constraintTop_toTopOf="@id/lbl_addfragment7"
                app:layout_constraintBottom_toBottomOf="@id/lbl_addfragment7"
                app:layout_constraintLeft_toRightOf="@id/lbl_addfragment7"
                app:layout_constraintRight_toLeftOf="@id/lbl_addfragment8"/>

