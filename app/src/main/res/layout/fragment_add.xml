<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/system_status_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/subtitle_gradient"
            android:elevation="2dp"
            android:gravity="center"
            android:text="@string/system_status_title"
            android:textColor="@color/subtitles"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/subcontainer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/system_status_title"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/addfragment_lbl_s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:text="@string/addfragment_lbl_s1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s1_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:text="@string/NA"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:text="@string/addfragment_lbl_s2"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:text="@string/NA"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:text="@string/addfragment_lbl_s3"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s3_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:gravity="center"
                android:text="@string/NA"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:text="@string/addfragment_lbl_s4"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s4_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:text="@string/NA"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="4"
                android:text="@string/addfragment_lbl_s5"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s5_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="4"
                android:text="@string/NA"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="5"
                android:text="@string/addfragment_lbl_s6"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s6_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="5"
                android:text="@string/NA"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="6"
                android:text="@string/addfragment_lbl_s7"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s7_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="6"
                android:text="@string/NA"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="7"
                android:text="@string/addfragment_lbl_s8"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s8_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="7"
                android:text="@string/NA"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="8"
                android:text="@string/addfragment_lbl_s9"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/addfragment_lbl_s9_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="8"
                android:text="@string/NA"
                android:textAlignment="center" />

        </GridLayout>

        <TextView
            android:id="@+id/add_subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subcontainer1"
            android:background="@drawable/subtitle_gradient"
            android:elevation="2dp"
            android:text="@string/add_subtitle2"
            android:textAlignment="center"
            android:textColor="@color/subtitles"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/subcontainer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_subtitle2"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/lbl_addfragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="@string/lbl_addfragment1" />

            <Spinner
                android:id="@+id/addfragment_sp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/lbl_addfragment1"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/lbl_addfragment5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/lbl_addfragment1"
                android:layout_margin="10dp"
                android:text="@string/lbl_addfragment5" />

            <Spinner
                android:id="@+id/addfragment_sp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_addfragment1"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/lbl_addfragment5"
                android:layout_toStartOf="@id/lbl_addfragment6"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/lbl_addfragment6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/lbl_addfragment1"
                android:layout_margin="10dp"
                android:text="@string/lbl_addfragment_minutos" />

            <TextView
                android:id="@+id/lbl_addfragment7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/lbl_addfragment5"
                android:layout_margin="10dp"
                android:text="@string/lbl_addfragment7" />

            <Spinner
                android:id="@+id/addfragment_sp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_addfragment5"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/lbl_addfragment7"
                android:layout_toStartOf="@id/lbl_addfragment8"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/lbl_addfragment8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/lbl_addfragment5"
                android:layout_margin="10dp"
                android:text="@string/lbl_addfragment_minutos" />

            <TextView
                android:id="@+id/lbl_addfragment9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/lbl_addfragment8"
                android:layout_margin="10dp"
                android:text="@string/lbl_addfragment9" />

            <Spinner
                android:id="@+id/addfragment_sp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_addfragment8"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/lbl_addfragment9"
                android:layout_toStartOf="@id/lbl_addfragment10"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/lbl_addfragment10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/lbl_addfragment8"
                android:layout_margin="10dp"
                android:text="@string/lbl_addfragment_minutos" />

        </RelativeLayout>

        <TextView
            android:id="@+id/add_subtitle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subcontainer2"
            android:background="@drawable/subtitle_gradient"
            android:elevation="2dp"
            android:gravity="center"
            android:text="@string/add_subtitle3"
            android:textColor="@color/subtitles"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/subcontainer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_subtitle3"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/lbl_addfragment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/lbl_addfragment2" />

            <EditText
                android:id="@+id/etxt_equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_addfragment2"
                android:layout_margin="10dp"
                android:hint="@string/hint_equipment"
                android:inputType="text" />

            <TextView
                android:id="@+id/lbl_addfragment11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etxt_equipment"
                android:layout_margin="10dp"
                android:text="@string/lbl_addfragment11" />

            <EditText
                android:id="@+id/etxt_modelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_addfragment11"
                android:layout_margin="10dp"
                android:hint="@string/lbl_addfragment11_hint"
                android:inputType="text" />

            <TextView
                android:id="@+id/lbl_addfragment3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etxt_modelo"
                android:layout_margin="20dp"
                android:text="@string/lbl_addfragment3" />

            <EditText
                android:id="@+id/etxt_serial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_addfragment3"
                android:layout_margin="10dp"
                android:hint="@string/hint_serial"
                android:inputType="text" />

            <TextView
                android:id="@+id/lbl_addfragment4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etxt_serial"
                android:layout_margin="10dp"
                android:text="@string/lbl_addfragment4" />

            <EditText
                android:id="@+id/etxt_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_addfragment4"
                android:layout_margin="10dp"
                android:hint="@string/hint_client"
                android:inputType="text" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etxt_client"
                android:layout_margin="20dp"
                android:background="@drawable/mainbutton"
                android:enabled="false"
                android:text="@string/btn_start"
                android:textColor="@color/subtitles"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_cancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_add"
                android:layout_margin="20dp"
                android:background="@drawable/cancel_button"
                android:enabled="false"
                android:text="@string/btn_cancelar"
                android:textColor="@color/subtitles"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_cancelar"
                android:layout_margin="20dp"
                android:maxHeight="20dp"
                android:minHeight="10dp" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>


