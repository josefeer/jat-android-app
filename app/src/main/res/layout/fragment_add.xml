        <TextView
            android:id="@+id/add_subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/subtitle_gradient"
            android:elevation="2dp"
            android:gravity="center"
            android:text="@string/add_subtitle2"
            android:textColor="@color/subtitles"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/add_subcontainer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@id/add_subtitle3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_subtitle2">

            <TextView
                android:id="@+id/lbl_addfragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/lbl_addfragment1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/addfragment_sp1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                app:layout_constraintTop_toTopOf="@id/lbl_addfragment1"
                app:layout_constraintBottom_toBottomOf="@id/lbl_addfragment1"
                app:layout_constraintRight_toRightOf="@id/addfragment_sp2" />

            <TextView
                android:id="@+id/lbl_addfragment5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/lbl_addfragment5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_addfragment1" />

            <Spinner
                android:id="@+id/addfragment_sp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                app:layout_constraintTop_toTopOf="@id/lbl_addfragment5"
                app:layout_constraintBottom_toBottomOf="@id/lbl_addfragment5"
                app:layout_constraintLeft_toRightOf="@id/lbl_addfragment5"
                app:layout_constraintRight_toLeftOf="@id/lbl_addfragment6"/>

            <TextView
                android:id="@+id/lbl_addfragment6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="@string/lbl_addfragment_minutos"
                app:layout_constraintBottom_toBottomOf="@id/lbl_addfragment5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/lbl_addfragment5" />

            <TextView
                android:id="@+id/lbl_addfragment7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
